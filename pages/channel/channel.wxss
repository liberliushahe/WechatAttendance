/**主容器**/
.container{
 height: 100%;
 background-color:#EFEFF4;
 text-align: center;
}
/**音乐容器**/
.music-container{
margin-top: 3px;
margin-bottom: 4px;
width:100%;
height:70px;
background-color:#fff;
}
.music_icon{
  width: 70px;
  height: 70px;
  float: left;
  margin-left: 3px;
}
.music_name{
 line-height: 74px;
}
.music_play{
  width: 30px;
  height: 30px;
  float: right;
  margin-right: 7px;
  margin-top: 20px;
}

/**视频容器**/

.Video{
  margin-top: 10px;
  width: 99%;
  height: 199px;
  margin-bottom: 2px;
}


/**版权样式**/
.copyright{
 width: 100%;
 height: 30px;

 font-size: 10px;
 background-color: #EFEFF4;
 text-align: center;
}
.copyright_info{
  padding: 10px;
}