/* pages/channel/channel.wxss */

/**主容器**/

/**音乐容器**/

.music-container {
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
}

.music_icon {
  width: 130rpx;
  height: 118rpx;
  float: left;
  margin-top: 1rpx;
  margin-bottom: 1rpx;
  margin-left: 3rpx;
}

.music_name {
  line-height: 120rpx;
  float: left;
  margin-left: 20rpx;
}

.music_play {
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin-right: 30rpx;
  margin-top: 45rpx;
}

/**视频容器**/

.video_wrapper {
  width: 100%;
  height: 450rpx;
  text-align: center;
  background-color: #fff;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.Video {
  width: 96%;
  height: 409rpx;
  margin-bottom: 2rpx;
  border: none;
}

.video_desc {
  float: left;
  margin-left: 30rpx;
}
