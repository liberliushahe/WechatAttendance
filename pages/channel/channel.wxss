/* pages/channel/channel.wxss */
/**音乐容器**/
.music_container {
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
}
.channel-title {
  text-align: center;
}
.music-item {
  width: 30%;
  display: flex;
  height: 200px;
  margin-left: 2%;
  margin-right: 3px;
  justify-content: center;
  align-items: center;
  text-align: center;
  flex-direction: column;
  box-sizing: border-box;
  margin-bottom: 6px;
}
.music_icon {
  border-radius: 5px;
  width: 100%;
  height: 150px;
}
.music_name {
  font-size: 14px;
  overflow: hidden;
  width: 110px;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.play {
  width: 20px;
  height: 20px;
  margin-top: 6px;
}
/**视频容器**/
.video_item {
  width: 48%;
  display: flex;
  height: 148px;
  margin-left: 1%;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
  margin-bottom: 6px;
}
.video_icon {
  border-radius: 2px;
  width: 100%;
  height: 120px;
}
.video_name {
  font-size: 14px;
  overflow: hidden;
  width: 110px;
  text-overflow: ellipsis;
  white-space: nowrap;
}
