/* pages/mime/mime.wxss */
/**主容器**/
.container{
 height: 80%;
 background-color:#EFEFF4;
}
/**用户头像样式**/
.page-body-info {
  padding-bottom: 0;
  height: 180px;
  text-align: center;
  background-color: #fff;
}
.userinfo-avatar {
  border-radius: 128rpx;
  width: 128rpx;
  height: 128rpx;
  margin-top: 30rpx;
}
.userinfo-nickname {
  margin-top: 40rpx;
  font-size: 30rpx;
}
/**用户信息样式**/
.page-body-setting{
 margin-top: 6px;
height: 400px;
}
.page-body-setting-item{
  height: 60px;
 background-color:#fff;
 margin-top: 3px;
 font-size: 16px;
  line-height: 60px;
}
.userinfoicon{
  width: 18px;
  margin-top: 21px; 
  height: 18px;
  margin-right: 8px;
  margin-left: 8px;
 float: left;
}
.userinfodirection{
  line-height: 60px;
  float: right;
  margin-top: 14px;
  margin-right: 8px;
  width: 32px;
  height: 32px;
}
/**版权样式**/
.copyright{
 width: 100%;
 height: 30px;
 font-size: 10px;
 background-color: #EFEFF4;
 text-align: center;
}
.copyright_info{
  padding: 10px;
}