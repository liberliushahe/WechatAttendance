/**index.wxss**/

.swiper {
  height: 360rpx;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.scroll {
  height: auto;
  width: 100%;
}

.flex-item {
  width: 100%;
  height: 200rpx;
  text-align: center;
}

/**菜单样式**/

.menu_container {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 6px;
  margin-bottom: 4px;
  background-color: #fff;
}

.menu_item {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  box-sizing: border-box;
  padding-bottom: 10px;
  padding-top: 10px;
  margin-top: 6px;
  margin-bottom: 20px;
}

.menu_icon {
  width: 80rpx;
  height: 80rpx;
  padding-bottom: 4px;
}

/**文章简介**/

.article_container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding-top: 14px;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 14px;
  margin-bottom: 4px;
  margin-top: 4px;
  border-bottom-width: 90%;
}

.article_icon {
  width: 100%;
  height: 440rpx;
}

.article_head {
  font-size: 16px;
  margin-top: -6px;
  margin-bottom: 10px;
  width: 100%;
}

.article_footer {
  font-size: 24rpx;
  margin-top: 6px;
  margin-bottom: 10px;
}
