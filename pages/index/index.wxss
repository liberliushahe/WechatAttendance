/**菜单样式**/
.menu_container{
   width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 3px;
  margin-bottom: 2px;
  background-color:#fff;
}
.menu_item{
   width: 25%;
   display: flex;
   flex-direction: column;
   justify-content: center;
  align-items: center;
  font-size: 12px;
  box-sizing: border-box;
  padding-bottom: 10px;
  padding-top: 10px;
  margin-top: 3px;
  margin-bottom: 10px;
}
.menu_icon{
   width: 40px;
   height: 40px;
   padding-bottom: 2px;
}

