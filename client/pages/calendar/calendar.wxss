/* pages/calendar/calendar.wxss */

.wrapper {
  width: 100%;
  background-color: #efeff4;
  padding-top: 30rpx;
}

.calendar {
  width: 90%;
  margin: auto;
  height: 100%;
  box-shadow: 0px 0px 6rpx 6rpx #789;
  background-color: #fff;
}

/*顶部样式*/

.calendar-top {
  padding-top: 5rpx;
  width: 94%;
  margin: auto;
  height: 140rpx;
}

.left-calendar {
  float: left;
  font-size: 26rpx;
}

.right-calendar {
  float: right;
  font-size: 28rpx;
}

.day {
  font-size: 76rpx;
  font-weight: bold;
}

.top-content {
  margin-top: 4rpx;
  writing-mode: vertical-lr;
}

/*中部样式*/

.calendar-middle {
  width: 94%;
  margin: auto;
  margin-top: 20rpx;
}

.middle-image {
  width: 100%;
  height: 600rpx;
}

.middle-image-content {
  font-size: 28rpx;
}
.current-time{

font-size: 14px;

}
/*底部样式*/

.calendar-bottom {
  margin-top: 10rpx;
  padding: 10rpx;
  font-size: 26rpx;
}

/*操作样式*/

.operator {
  width: 90%;
  margin: auto;
  height: 100rpx;
  margin-top: 20rpx;
}

.button {
  background-color: #39f;
}

/*天气样式*/

.weather-wrap {
  margin-left: 8px;
}

.weather {
  font-size: 14px;
}
