<!--pages/calendar/calendar.wxml-->
<view class="wrapper">
<view class="calendar">
<!--顶部-->
<view class="calendar-top">
<view class="left-calendar">

<text class="top-content">
腊月初八
辛酉年
</text>
</view>
<view class="right-calendar">
{{year}}/<text class="day">{{day}}</text> 
</view>
</view>
<!--中部-->
<view class="calendar-middle">
<image class="middle-image" src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1516793466560&di=19988182e7ccb15a08f3c1bb0ea745bb&imgtype=0&src=http%3A%2F%2Fh.hiphotos.baidu.com%2Fzhidao%2Fpic%2Fitem%2F9f2f070828381f30ce8e5591af014c086e06f077.jpg"></image>
<view class="middle-image-content">新年好，大家大吉大利，阖家欢乐</view>
<view class="current-time">当前时间：{{time}}</view>
</view>
<!--下部-->
<view class="calendar-bottom">
<view  class="weather-wrap">
 <text class="weather">{{weatherData}}</text> 
</view>

</view>
</view>
<view class="operator">
<button class="button" catchtap="uploadImage">上传图片</button>
</view>

<view class="operator">
<button class="button" catchtap="takePicture">拍照</button>
</view>


</view>
